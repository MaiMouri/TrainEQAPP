<div class="container p-3 my-3">
  <!--p class="subtitle">Hey, <%= current_user.email %>!</p-->
  <h1 class="title"><i class="fas fa-chart-line mr-2"></i>Dashboard</h1>
  <p>User id: <%= current_user.id %>   Meeting id: <%= @meeting.id %></p>
  <%# Total scores %>
  <%= render 'shared/scores' %>
