<div class="row d-flex flex-wrap mb-4">
  <div class="col-lg-3 col-md-6">
    <div class="card radius-10 border-start border-0 border-3 border-info">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div>
            <p class="mb-0 text-secondary">Total Engaged</p>
            <h4 class="my-1 text-info"><%= @total_engaged_count %></h4>
            <p class="mb-0 font-13">+25% from last meeting</p>
          </div>
          <div class="widgets-icons-2 rounded-circle bg-gradient-scooter text-white ms-auto"><i class="fas fa-handshake"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-3 col-md-6">
    <div class="card radius-10 border-start border-0 border-3 border-danger">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div>
            <p class="mb-0 text-secondary">Total Disangaged</p>
            <h4 class="my-1 text-danger"><%= @total_disengaged_count %></h4>
            <p class="mb-0 font-13">-12% from last meeting</p>
          </div>
          <div class="widgets-icons-2 rounded-circle bg-gradient-bloody text-white ms-auto"><i class="fas fa-exclamation-triangle"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-3 col-md-6">
    <div class="card radius-10 border-start border-0 border-3 border-success">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div>
            <p class="mb-0 text-secondary">Total Happys</p>
            <h4 class="my-1 text-success"><%= @total_happys %></h4>
            <p class="mb-0 font-13">+25% from last meeting</p>
          </div>
          <div class="widgets-icons-2 rounded-circle bg-gradient-ohhappiness text-white ms-auto"><i class="far fa-laugh-squint"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-3 col-md-6">
    <div class="card radius-10 border-start border-0 border-3 border-warning">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <div>
            <p class="mb-0 text-secondary">Total Meetings</p>
            <h4 class="my-1 text-warning"><%= @number_of_meetings %></h4>
            <p class="mb-0 font-13">With <%= @total_participants.size %> participants</p>
          </div>
          <div class="widgets-icons-2 rounded-circle bg-gradient-blooker text-white ms-auto"><i class="fas fa-calendar-times"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
