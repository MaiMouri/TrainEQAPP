{
  "manifest_version": 2,
  "name": "TrainEQ extension",
  "description": "Chrome extension for TrainEQ",
  "author": "Etienne Worham, Galym Parpiyev, Hirofumi Jinno, Mai Mouri",
  "version": "1",
  "permissions": [
    "tabs",
    "<all_urls>"
  ],
  "icons": {
    "16": "images/trainEQ_icon.png",
    "32": "images/trainEQ_icon.png",
    "48": "images/trainEQ_icon.png",
    "128": "images/trainEQ_icon.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "TrainEQ Extension"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "/scripts/main.js",
        "/scripts/monitoring.js",
        "/vendors/html2canvas.min.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "/vendors/face-api.min.js",
      "/scripts/emotion-detector.js"
    ],
    "persistent": false
  }
}
